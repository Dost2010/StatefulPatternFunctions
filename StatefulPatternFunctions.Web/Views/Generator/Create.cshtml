@model StatefulPatternFunctions.Web.Models.Generator.CreateModel

@{
    ViewData["Title"] = "Profiles Generator";
}

<h1>Profiles Generator</h1>

<h4>Generate random profiles</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumberOfProfiles" class="control-label"></label>
                <input asp-for="NumberOfProfiles" class="form-control" />
                <span asp-validation-for="NumberOfProfiles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Back to Home page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
